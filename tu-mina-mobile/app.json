{
  "expo": {
    "name": "Tu Mina - Registro Producción",
    "slug": "tu-mina-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tumina.produccion"
    },
    "android": {
      "package": "com.tumina.produccion",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "La app necesita acceso a tu ubicación para registrar los ciclos de producción."
        }
      ]
    ],
    "scheme": "tumina"
  }
}